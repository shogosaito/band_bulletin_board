<div class="like-link" id="like-link-<%= micropost.id %>">
  <% if logged_in? %>
    <% if current_user.likes.find_by(micropost_id: micropost.id) %>
      <%= link_to unlike_path(micropost.id), method: :delete, remote: true do %>
        <i class= "unlike-btn fas fa-heart fa-3x"></i><figcaption>お気に入り</figcaption>
      <% end %>
    <% else %>
      <%= link_to like_path(micropost.id), method: :post, remote: true do %>
        <i class= "like-btn far fa-heart fa-3x"></i><figcaption>お気に入り</figcaption>
      <% end %>
    <% end %>
  <% else %>
      <i class = "far fa-heart fa-3x"></i><figcaption>お気に入り</figcaption>
  <% end %>
</div>
