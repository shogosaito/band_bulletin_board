<div class="align-items-center notifications">
  <h1>通知</h1>
    <%= link_to notification_delete_path,method: :delete do %>
        <i class="fas fa-trash" style="color: black;"></i>
        <h7 style="color: black;">全削除</h7>
    <% end %>
<% unless @notifications.blank? %>
  <% if @notifications.exists? %>
    <div class="users-index">
      <%= render @notifications %>
      <%= paginate @notifications %>
    </div>
    <% end %>
<% else %>
  <p style="text-align: center;">通知はありません</p>
<% end %>
</div>
