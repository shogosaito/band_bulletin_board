<header class="header clearfix">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to "バンド募集掲示板", root_path, id: "logo" ,class:"nav-item" %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class='nav-item'><%= link_to "トップ", root_path, class:"nav-link" %></li>
        <% if logged_in? %>
          <li class="nav-item"><%=link_to "通知", notification_path, class:"nav-link" %></li>
          <% if unchecked_notifications.any? %>
            <i class="fas fa-bell notification-circle" style="color: gold;"></i>
          <% end %>
          <li class="nav-item"><%= link_to "マイページ", current_user, class:"nav-link" %></li>
          <li class="nav-item"><%= link_to "記事投稿", new_path, class:"nav-link"%></li>
          <li class="nav-item"><%= link_to "ログアウト", logout_path, method: :delete ,class:"nav-link"%></li>
            <%= search_form_for @search, url: search_path, class:"search-form form-inline" do |f| %>
              <%= f.search_field :content_or_title_cont, placeholder: 'キーワードを入力', class:"form-control mr-sm-2" %>
              <%= f.submit ("検索"), class: "btn btn-outline-success my-2 my-sm-0" %>
            <% end %>
        <% else %>
          <li class='nav-item'><%= link_to "新規登録", signup_path, class:"nav-link" %></li>
          <li class='nav-item'><%= link_to "ログイン", login_path ,class:"nav-link" %></li>
            <%= search_form_for @search, url: search_path, class:"search-form form-inline" do |f| %>
              <%= f.search_field :content_or_title_cont, placeholder: 'キーワードを入力', class:"form-control mr-sm-2" %>
              <%= f.submit ("検索"), class: "btn btn-outline-success my-2 my-sm-0" %>
            <% end %>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
