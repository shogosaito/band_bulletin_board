<% provide(:title, "Log in") %>
<div class="align-items-center">
  <h1>ログイン</h1>
    <%= form_with(url: login_path, scope: :session, class:"login", local: true) do |f| %>
      <tr>
        <th><%= f.label :メールアドレス %></th>
        <td>
          <div class="form-group">
            <%= f.email_field :email, class: 'form-control' %>
          </div>
        </td>
      </tr>
      <tr>
        <th><%= f.label :パスワード %></th>
          <td>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control' %>
            </div>
          </td>
      </tr>
      <div class="form-group entry">
        <%= f.submit "ログイン", class: "btn btn-primary login-btn" %>
      </div>
    <% end %>
    <ul class=sns-login-button>
      <%= link_to  user_google_oauth2_omniauth_authorize_path, class:"btn btn-social btn-google" do %>
      <span><i class="fab fa-google-plus-square fa-1x"></i>googleで登録</span>
      <% end %>
    <ul>
</div>
