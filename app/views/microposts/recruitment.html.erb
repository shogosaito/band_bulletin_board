<div class="align-items-center">
  <h1>記事検索フォーム</h1>
</div>
  <%= search_form_for @search, url:micropost_search_path, local: true do |f| %>
  <table>
    <tr>
      <th>記事の種類</th>
      <td>
        <div class="form-group">
          <%= javascript_pack_tag 'content_type' %>
          <%= f.select :content_type, [["指定しない",""],["募集","募集"], ["加入","加入"]], class: 'form-control',id:'content_type' %>
        </div>
      </td>
      </tr>
  <tr>
    <th>募集年齢</th>
    <td>
      <div class="form-group form-age">
        <%= f.search_field :recruitment_min_age_eq %> 〜 <%= f.search_field :recruitment_max_age_eq %>
      </div>
    </td>
  </tr>
  <tr>
    <th>募集性別</th>
    <td>
      <div class="form-group">
        <%= f.select :gender, [["指定なし", ""], ["男", "男"], ["女", "女"]]  %>
      </div>
    </td>
  </tr>
  <tr>
   <th>方向性</th>
    <td>
      <div class="form-group">
        <%= f.select :activity_direction, [["指定なし", ""], ["趣味志向", "趣味志向"], ["プロ志向", "プロ志向"]], required: true  %>
      </div>
    </td>
  </tr>
  <tr>
    <th>楽曲</th>
    <td>
      <div class="form-group">
        <ul class="music-type">
          <% %w(指定なし オリジナル コピー).each.with_index do |type,i| %>
            <li><%= f.check_box :music_type, { multiple: true }, type %>
            <%= f.label type %></li>
          <% end %>
       </ul>
      </div>
    </td>
  </tr>

  <tr>
    <th>ジャンル</th>
    <td>
      <div class="form-group">
        <%= javascript_pack_tag 'genre' %>
        <%= select_tag('genre', options_for_select([["J-POP", "J-POP"], ["アニメ", "アニメ"], ["邦楽ヒップホップ/R&B/レゲエ", "邦楽ヒップホップ/R&B/レゲエ"],
        ["邦楽ロック", "邦楽ロック"], ["邦楽ダンス/エレクトロニカ", "邦楽ダンス/エレクトロニカ"],
        ["K-POP/ワールド・ミュージック", "K-POP/ワールド・ミュージック"], ["洋楽総合", "洋楽総合"],
        ["洋楽ポップス", "洋楽ポップス"],["洋楽ヒップホップ/R&B/レゲエ", "洋楽ヒップホップ/R&B/レゲエ"],
        ["洋楽ロック", "洋楽ロック"], ["洋楽ダンス/エレクトロニカ", "洋楽ダンス/エレクトロニカ"],
        ["歌謡曲/演歌", "歌謡曲/演歌"],["ジャズ", "ジャズ"],["クラシック ", "クラシック "]]),
        class: "genre",include_blank: "選択してください", multiple: true) %>
      </div>
    </td>
  </tr>
  <tr>
    <div class="form-group">
        <div class="prefectures-check-boxes">
          <th>活動地域</th>
          <td>
            <div class="checkbox">
              <ul>
                <%= collection_check_boxes :prefecture, :prefecture_ids, Prefecture.all, :id, :name, include_hidden: false do |prefecture| %>
                <li><%= prefecture.label{ prefecture.check_box + prefecture.text } %></li>
                <% end %>
              </ul>
            </div>
          </td>
        </div>
    </div>
  </tr>
  <tr>
    <th>募集パート</th>
    <td>
      <div class="form-group　part">
        <%= javascript_pack_tag 'part' %>
        <%= select_tag('part', options_for_select([["ボーカル", "ボーカル"], ["ギター", "ギター"], ["ベース","ベース"],
        ["ドラム", "ドラム"], ["キーボード", "キーボード"],["コーラス", "コーラス"], ["パーカッション", "パーカッション"],
        ["ギターボーカル", "ギターボーカル"],["DJ", "DJ"], ["その他", "その他"]]), placeholder: "選択してください",
        class:"part", multiple: true) %>
      </div>
    </td>
  </tr>
</table>
<div class="froup form-Submit">
  <%= reset_tag 'リセット', class: 'btn btn-info', id: 'js_clear_btn' %>
  <%= f.submit '探す', class: 'btn btn-info' %>
  <% end %>
</div>
