<div id="micropost-<%= micropost.id %>" data-micropost-id="<%= micropost.id %>">
  <div class="micropost-info">
    <dl>
      <dt>記事の内容</dt>
      <dd><%= micropost.content %></dd>
    </dl>
    <dt>基本データ</dt>
    <dd>
      <dl>
        <dt>記事の種類</dt>
        <dd><%= micropost.content_type %></dd>
        <dt>活動エリア</dt>
        <dd><%= micropost.prefecture.name %></dd>
        <dt>活動曜日</dt>
        <dd><%= @activity_day %></dd>
        <dt>活動方向性</dt>
        <dd><%= micropost.activity_direction %></dd>
        <dt>バンドの楽曲</dt>
        <dd><%= @music_type %></dd>
      </dl>
    </dd>
    <dd>
      <dl>
        <dt>加入希望パート</dt>
        <dd><%= @part %></dd>
      </dl>
      <dl>
        <dt>バンドのジャンル</dt>
        <dd><%= @genre %></dd>
      </dl>
      <dl>
        <dt>試聴音源</dt>
        <dd>
          <% if micropost.demo_sound_source.blank? %>
          -
          <% else %>
          <%= micropost.demo_sound_source %>
          <% end %>
        </dd>
      </dl>
    </div>

    <span class="timestamp">
      <%= time_ago_in_words(micropost.created_at)%>前.
      <% if current_user?(micropost.user) %>
      <%= link_to "編集", edit_micropost_path(micropost) %>
      <%= link_to "削除", micropost, method: :delete,
      data: { confirm: "本当に削除しますか?" } %>
      <% end %>
    </span>
  </div>
